<%# show patterns if the current seller has patterns they have created %>
<% if @user_patterns&.any? %>
  <h2 class = "heading-text">Your Patterns</h2>
  <%= render partial: "patterns", object: @user_patterns, as: 'patterns' %>
<% end %>

<%# show patterns if the current user has patterns they have bought %>
<% if @bought_patterns&.any? %>
  <h2 class = "heading-text">Purchased Patterns</h2>
  <%= render partial: "patterns", object: @bought_patterns, as: 'patterns' %>
<% end %>

<%# show all patterns %>
<h2 class = "heading-text">All Patterns</h2>
<%= render partial: "patterns", object: @patterns, as: 'patterns' %>
