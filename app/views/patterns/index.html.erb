<p id="notice"><%= notice %></p>

<h1>Patterns</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Sizes</th>
      <th>Fabric</th>
      <th>Fabric amount</th>
      <th>Type</th>
      <th>Category</th>
      <th>Price</th>
      <th>Description</th>
      <th>Difficulty</th>
      <th>Notions</th>
      <th>Complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patterns.each do |pattern| %>
      <tr>
        <td><%= pattern.user_id %></td>
        <td><%= pattern.name %></td>
        <td><%= pattern.sizes %></td>
        <td><%= pattern.fabric %></td>
        <td><%= pattern.fabric_amount %></td>
        <td><%= pattern.type %></td>
        <td><%= pattern.category %></td>
        <td><%= pattern.price %></td>
        <td><%= pattern.description %></td>
        <td><%= pattern.difficulty %></td>
        <td><%= pattern.notions %></td>
        <td><%= pattern.complete %></td>
        <td><%= link_to 'Show', pattern %></td>
        <td><%= link_to 'Edit', edit_pattern_path(pattern) %></td>
        <td><%= link_to 'Destroy', pattern, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

